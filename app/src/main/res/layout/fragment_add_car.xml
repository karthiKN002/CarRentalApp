<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/inputCarModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Model"
            android:textColor="@color/black"
            android:inputType="text" />

        <EditText
            android:id="@+id/inputCarBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Brand"
            android:inputType="text" />

        <EditText
            android:id="@+id/inputCarSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Seats"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputCarPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price per Day"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/inputCarLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:inputType="text" />

        <EditText
            android:id="@+id/inputCarDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"/>

        <Button
            android:id="@+id/buttonUploadRc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload RC"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/buttonUploadFc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload FC"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/buttonUploadInsurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Insurance"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/buttonUploadPuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload PUC"
            android:layout_marginTop="8dp" />
        <Button
            android:id="@+id/buttonSelectImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Car Images"
            android:layout_marginTop="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/buttonSubmitCarDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Car Details"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>