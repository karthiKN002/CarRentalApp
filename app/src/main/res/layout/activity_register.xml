<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- All fields from Full Name to OTP Layout remain the same -->
        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Select User Type"
            android:textColor="#424242"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupUserType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:checked="true"
                android:text="Customer" />

            <RadioButton
                android:id="@+id/radioManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manager" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonSendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:text="Send OTP"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/otpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/editTextOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/edit_text"
                android:hint="Enter OTP"
                android:inputType="number"
                android:padding="12dp" />

            <Button
                android:id="@+id/buttonVerifyOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#4CAF50"
                android:text="Verify OTP"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonResendOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#6F6B6A"
                android:text="Resend OTP"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Document Upload Section -->
        <TextView
            android:id="@+id/uploadDocDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Please upload your store license (PDF, max 5MB)"
            android:textColor="#616161"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonUploadDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:text="Upload Store License"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            tools:visibility="visible"/>


        <!-- NEW: Layout to trigger video recording -->
        <LinearLayout
            android:id="@+id/videoActionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Verification Video"
                android:textColor="#424242"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/textViewVideoCaution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFDE7"
                android:padding="8dp"
                android:text="Caution: Video must clearly show you performing authorized operations, like opening the store or accessing restricted items."
                android:textColor="#6D4C41"
                tools:visibility="visible" />

            <Button
                android:id="@+id/buttonShowCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Verification Video"
                tools:visibility="visible"/>


        </LinearLayout>

        <!-- Video Recording Preview Section -->
        <LinearLayout
            android:id="@+id/videoRecordingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:background="#000000">

                <!-- Camera Preview -->
                <SurfaceView
                    android:id="@+id/surfaceViewCamera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <!-- Timer Display -->
                <TextView
                    android:id="@+id/textViewTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <!-- Start/Stop Buttons Over Camera -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="24dp">

                    <View
                        android:id="@+id/buttonStartRecording"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_record"
                        android:backgroundTint="@null"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <View
                        android:id="@+id/buttonStopRecording"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_stop"
                        android:backgroundTint="@null"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </FrameLayout>

            </FrameLayout>




        </LinearLayout>

        <TextView
            android:id="@+id/textViewVideoStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Video Recorded ✓"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Register Button -->
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>