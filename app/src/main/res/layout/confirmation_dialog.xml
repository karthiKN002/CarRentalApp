<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/confirmCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car: N/A"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/confirmDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dates: N/A"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/confirmTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: â‚¹0.00"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/confirmLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Location: N/A"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/payButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:layout_gravity="end"
        android:layout_marginTop="16dp" />
</LinearLayout>